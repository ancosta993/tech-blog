<h2 class="edit-post-title">
   Add Post
</h2>
<div class="form-wrapper">
   <form class="blog-form form">
      <div>
         <label for="blog-title">Title</label>
         <input type="text" name="blog-title" id="blog-title">
      </div>
      <div class="blog-content-wrapper">
         <label for="blog-content">Content:</label>
      </div>
      <div class="add-content-field">
         <textarea name="blog-content" id="blog-content" cols="100" rows="6"></textarea>
      </div>
      <button class="submit-btn" type="submit">Create Post</button>
   </form>
</div>
<script src="/javascript/addPost.js"></script>